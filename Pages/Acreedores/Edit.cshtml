@page "{id:int}"
@model KalkulosCore.Pages.Acreedores.EditModel

@{
    ViewData["Title"] = "Editar Acreedor";
}

<h1>Editar</h1>
<h4>Acreedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Acreedore.Id" />
            <div class="form-group mb-2">
                <label asp-for="Acreedore.Nombres" class="control-label"></label>
                <input asp-for="Acreedore.Nombres" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Acreedore.Apellidos" class="control-label"></label>
                <input asp-for="Acreedore.Apellidos" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Acreedore.Documento" class="control-label"></label>
                <input asp-for="Acreedore.Documento" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Acreedore.Direccion" class="control-label"></label>
                <input asp-for="Acreedore.Direccion" class="form-control" />
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}