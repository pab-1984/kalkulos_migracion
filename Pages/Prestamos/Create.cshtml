@page
@model KalkulosCore.Pages.Prestamos.CreateModel

@{
    ViewData["Title"] = "Nuevo Préstamo";
}

<h1>Nuevo Préstamo</h1>
<h4>Ingrese los datos de la nueva operación</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label class="control-label">Cliente</label>
                        <select asp-for="Prestamo.Idcliente" class="form-control" asp-items="Model.ClientesSelectList">
                            <option value="">-- Seleccione un Cliente --</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label class="control-label">Acreedor</label>
                        <select asp-for="Prestamo.Idacreedor" class="form-control" asp-items="Model.AcreedoresSelectList">
                            <option value="">-- Seleccione un Acreedor --</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Prestamo.Capitalinicial" class="control-label">Capital Inicial</label>
                        <input asp-for="Prestamo.Capitalinicial" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Prestamo.Moneda" class="control-label"></label>
                        <select asp-for="Prestamo.Moneda" class="form-control" asp-items="Model.MonedasOptions">
                            <option value="">-- Seleccione Moneda --</option>
                        </select>
                    </div>
                </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Prestamo.Cuotas" class="control-label">Nº de Cuotas</label>
                        <input asp-for="Prestamo.Cuotas" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Prestamo.Tea" class="control-label">T.E.A. (%)</label>
                        <input asp-for="Prestamo.Tea" class="form-control" />
                    </div>
                </div>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Prestamo.Tipodecuotas" class="control-label">Tipo de Cuotas</label>
                <input asp-for="Prestamo.Tipodecuotas" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Prestamo.Primervencimiento" class="control-label">Primer Vencimiento (dd/mm/aaaa)</label>
                <input asp-for="Prestamo.Primervencimiento" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Prestamo.Observaciones" class="control-label"></label>
                <textarea asp-for="Prestamo.Observaciones" class="form-control" rows="3"></textarea>
            </div>
            
            <br/>
            <div class="form-group">
                <input type="submit" value="Guardar Préstamo y Generar Cuotas" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-page="/Index">Volver al Inicio</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}