@page "{id:int}"
@model KalkulosCore.Pages.Clientes.DeleteModel

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h1>Eliminar</h1>
<h3 class="text-danger">¿Estás seguro de que quieres eliminar a este cliente?</h3>
<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
         <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Cliente.Nombres)
         </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Cliente.Nombres)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Cliente.Direccion)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Cliente.Direccion)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Cliente.Idcliente" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Index">Cancelar y Volver a la Lista</a>
    </form>
</div>